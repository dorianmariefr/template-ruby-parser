#!/usr/bin/env ruby

require "optparse"
require_relative "../lib/code-ruby-parser"

options = {}

OptionParser
  .new do |opts|
    opts.banner = "Usage: bin/code [options]"

    opts.on(
      "-i INPUT",
      "--input=INPUT",
      "Input in the code language (String or File)"
    ) do |input|
      input = File.read(input) if File.exists?(input)

      options[:input] = input
    end
  end
  .parse!

input = options.fetch(:input, "")

pp ::Code::Parser.parse(input)
